# Enforce LF endings for all text files by default
* text eol=lf

# Explicit LF for source & config
*.py text eol=lf
*.pyw text eol=lf
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.sh text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.ps1 text eol=lf

# Keep Windows batch scripts CRLF if present
*.bat text eol=crlf

# Binary (no end-of-line normalization)
*.png binary
*.jpg binary
*.ico binary
*.db binary
*.sqlite binary
